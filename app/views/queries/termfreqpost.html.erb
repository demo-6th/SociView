<%= include_gon(:init => true) %>

<div class="search_list">
  <div class="container">
    <div class="row">
      <div id="search" class="search_all">
        <p id="count">查詢結果：<%= @count %>筆</p>
        <p id="theme">查詢主題：<%= @theme.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="start">起始時間：<%= @start %></p>
        <p id="end">結束時間：<%= @end %></p>
        <p id="source">資料來源：<%= @source.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="type">資料種類：<%= @type.to_s.gsub(/[\[\]\"]/, "") %></p>
      </div>
    </div>
  </div>

  <%= @termfreq  %>
 
  <div class="container">
    <canvas id="verbCount" width="960px" height="400px"></canvas>
  </div>
  <div class="container">
    <canvas id="nounCount" width="960px" height="400px"></canvas>
  </div>
  <div class="container">
    <canvas id="adjCount" width="960px" height="400px"></canvas>
  </div>
</div>