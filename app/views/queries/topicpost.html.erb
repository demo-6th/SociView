<div class="search_list">
  <div class="container">
    <div class="row">
      <div class="search_all">
        <p id="count">查詢結果：<%= @count %>筆</p>
        <p id="theme">查詢主題：<%= @theme.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="start">起始時間：<%= @start %></p>
        <p id="end">結束時間：<%= @end %></p>
        <p id="source">資料來源：<%= @source.to_s.gsub(/[\[\]\"]/, "") %></p>
        <p id="type">資料種類：<%= @type.to_s.gsub(/[\[\]\"]/, "") %></p>
      </div>
    </div>
  </div>
  <div class="chart">
    <div class="text-red-500 pl-1"><%= @topic %></div>
    <% if FileTest.exist?("public/images/ldavis.html") %>
      <embed type="text/html" src="/images/ldavis.html"  width="1210" height="780"></embed>
    <% end %>
  </div>
</div>