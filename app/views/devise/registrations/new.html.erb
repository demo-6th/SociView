
<div class="log_page">
  <div class="container py-8">
      <div class="row flex justify-around items-center">
        <div class="col-4 rounded shadow-lg">
          <div class="log_detail overflow-hidden">
            <h3 class="text-center bg-teal-600 rounded py-2 px-6 text-white text-1xl">歡迎加入我們</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                <%= f.label :nickname, '暱稱' %><br /> 
                <%= f.text_field :nickname %>
                </div>

                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <div class="field">
                  <%= f.label :password, '密碼' %>
                  <% if @minimum_password_length %>
                  <em>(最少<%= @minimum_password_length %>個字)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, '確認密碼' %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>

                <div class="actions">
                  <%= f.submit "註冊" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
          </div>
        </div>
             <%= render "devise/shared/log_img" %>
      </div>
    </div>
  </div>
</div>
