<div class="login_page">
  <div class="container">
    <div class="row">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="col-6">
        <h2>修改資料</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="login_item">
        <%= f.label :nickname, '暱稱' %><br />
        <%= f.text_field :nickname, class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="login_item">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
       <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="login_item">
        <%= f.label :password, '新的密碼' %> <i>(如果不修改密碼，請留空白。)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
         <% if @minimum_password_length %>
        <br />
        <% end %>
      </div>
      <div class="login_item">
        <%= f.label :password_confirmation, '再次確認密碼' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="login_item">
        <%= f.label :current_password, '請輸入您的原密碼來修改' %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="loin_action">
        <%= f.submit "更新", class: "loin_btn" %>
        <%= link_to "返回上一頁", :back, class: "loin_btn" %>
      </div>
    </div>
       <% end %>
       <div class="col-6">
        <%= render "devise/shared/log_img" %>
      </div>
    </div>
  </div>
</div>

