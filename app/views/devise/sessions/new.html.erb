

  <div class="container flex justify-center mx-auto h-screen -h-30">
    <div class="bg-gray-100 p-8 my-auto w-1/3 ">
      <h2 class="text-gray-900 text-lg font-medium title-font mb-5">Sign In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="relative mb-4">
        <%= f.label :email, class: "leading-7 text-sm text-gray-600" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-4">
        <%= f.label :password, '密碼', class: "leading-7 text-sm text-gray-600"%><br />
        <%= f.password_field :password, autocomplete: "請輸入密碼", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <!-- <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, '記得我' %>
        </div> -->
      <% end %>
      <div class="actions">
        <%= f.submit "登入", class: "text-white bg-indigo-500 border-0 py-1 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>    
    </div>
    <div class="bg-gray-100 p-8 mt-10 w-1/3">
      <%= render "devise/shared/log_img" %>
    </div>
  </div>







