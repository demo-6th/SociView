  <div class="login_page">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <h2>Welcome Back</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="login_item">
            <%= f.label :email, class: "login_label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
          </div>
          <div class="loin_item mb-2">
            <%= f.label :password, '密碼', class: "login_label"%><br />
            <%= f.password_field :password, autocomplete: "請輸入密碼", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
          </div>
          
          <% if devise_mapping.rememberable? %>
           <!-- <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, '記得我' %>
          </div> -->
          <% end %>
        
          <div class="loin_action">
            <%= f.submit "登入", class: "w-1/3 text-black border-0 py-1 px-6 rounded text-lg cursor-pointer" %>

            <%= link_to('註冊', new_registration_path(:user), class: "w-2/3 text-black border-0 py-2 px-8 rounded text-lg") %> 
          </div>
          <% end %> 
        </div>
        <div class="col-6">
          <%= render "devise/shared/log_img" %>
        </div>
      </div>
    </div>
  </div>
  
  
  
  
  
  
  
  
  
  
  
  





