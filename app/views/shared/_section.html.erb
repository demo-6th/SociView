<%= form_tag do %>
<%= include_gon(:init => true) %>
<div class="section">
  <div class="choice_page">
    <div class="col-3">
      <div class="theme">
        <h2 class="theme_item">搜尋主題分類</h2>
        <div class="choice_box theme_btn">
        <% if current_page?(volume_queries_path) %> 
          <div class="choice_item ">
            <%= check_box_tag(:theme1, "期末") %>
            <%= label_tag(:theme1, "期末", class: "theme_text") %>
          </div>
          <div class="choice_item">
            <%= check_box_tag(:theme2, "手機") %> 
            <%= label_tag(:theme2, "手機", class: "theme_text") %>
          </div>
          <div class="choice_item">
            <%= check_box_tag(:theme3, "貓") %>
            <%= label_tag(:theme3, "貓", class: "theme_text") %>
          </div>
        </div>
            <p id="validate_theme" class="disable"> 請選擇至少兩種以上主題 </p>
        <% else %> 
          <div><%= radio_button_tag(:theme, "五倍", false, id: 1) %> <%= label_tag(:theme, "五倍", class: "theme_text", for: 1) %></div>
          <div><%= radio_button_tag(:theme, "手機", false, id: 2) %> <%= label_tag(:theme, "手機", class: "theme_text", for: 2) %></div>
          <div><%= radio_button_tag(:theme, "貓", false, id: 3) %> <%= label_tag(:theme, "貓", class: "theme_text", for: 3) %></div>
          </div>
          <p id="validate_theme" class="disable"> 請選擇至少一種主題 </p>
        <% end %>
      </div>
    </div>
<div class="col-3">
			<div class="theme">
				<h2 class="theme_item">時間區段</h2>
				<div class="choice_box time_btn">
					<div><%= label_tag(:time1, "開始時間：", class: "theme_text", for: "start") %><%= date_field(:user, :start, class: "datepicker_start border border-gray-200 w-full rounded", id: "start") %></div>
					<div><%= label_tag(:time2, "結束時間：", class: "theme_text", for: "end") %><%= date_field(:user, :end, class: "datepicker_end border border-gray-200 w-full rounded", id: "end") %></div>
			</div>
        <p id="validate_time" class="disable"> 請選擇開始與結束時間 </p>
		</div>
	</div>

    <div class="col-3">
      <div class="theme">
        <h2 class="theme_item">搜尋熱門社群</h2>
        <div class="choice_box source_btn">
          <div>
            <%= check_box_tag(:dcard, "Dcard") %>  
            <%= label_tag(:dcard, "Dcard", class: "theme_text") %>
          </div>
          <div>
            <%= check_box_tag(:ptt, "PTT") %>   
            <%= label_tag(:ptt, "PTT", class: "theme_text") %>
          </div>
        </div>
        <p id="validate_source" class="disable"> 請選擇至少一種社群 </p>
      </div>
    </div>
		<div class="col-3">
			<div class="theme">
				<h2 class="theme_item">搜尋資料類型</h2>
				<div class="choice_box type_btn">
					<div><%= check_box_tag(:post, "主文") %> <%= label_tag(:post, "主文", class: "theme_text") %></div>
					<div><%= check_box_tag(:comment, "回文") %> <%= label_tag(:comment, "回文", class: "theme_text") %></div>
				</div>
        <p id="validate_type" class="disable"> 請選擇至少一種類型 </p>
			</div>
		</div>  	
  </div>  
    <div class="button_page"><%= submit_tag "開始分析", class: "search_btn check" %></div>
</div>
<% end %>
  
