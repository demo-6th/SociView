<div class="section">
  <%= form_tag do %>
  <div class="choice_page flex">
    <div class="theme">
      <h2 class="theme_item">主題區</h2>
      <div class="checkbox">
        <div><%= check_box_tag(:theme) %>
          <%= label_tag(:theme0, "空氣清淨機", class: "theme_text") %></div>
        <div><%= check_box_tag(:theme) %>
          <%= label_tag(:theme1, "武漢肺炎", class: "theme_text") %></div>
        <div><%= check_box_tag(:theme) %> 
          <%= label_tag(:theme2, "你想知道什麼？", class: "theme_text") %></div>

        <label class="category-select">
          <%= check_box_tag "theme", "老師", false %>老師<br>
          <%= check_box_tag "theme", "學生", false %>學生<br>
          <%= check_box_tag "theme", "台女", false %>台女<br>
          <%= check_box_tag "theme", "渣男", false %>渣男<br>
          <%= check_box_tag "theme", "肺炎", false %>肺炎<br>
        </label>
      </div>
    </div>

    <div class="theme">
      <h2 class="theme_item">時間區</h2>
      <div class="border-solid border-black"><%= label_tag(:time1, "開始時間：", class: "theme_text") %><%= date_field(:user, :start, class: "datepicker_start border-solid border-black") %></div>
      <div><%= label_tag(:time2, "結束時間：", class: "theme_text") %><%= date_field(:user, :end, class: "datepicker_end") %></div>
    </div>

    <div class="theme">
      <h2 class="theme_item">社團區</h2>
      <div class="checkbox">
        <div><%= check_box_tag(:group0) %>
          <%= label_tag(:group0, "Dcard", class: "theme_text") %></div>
        <div><%= check_box_tag(:group1) %>
          <%= label_tag(:group1, "PTT", class: "theme_text") %></div>
        <div><%= check_box_tag(:group2) %>
          <%= label_tag(:group2, "伊莉論壇", class: "theme_text") %></div>
      </div>
    </div>
  </div>
  <div class="button_page">
    <%= submit_tag "開始分析", class: "search_btn" %>
  </div>
  <% end %>
</div>

  